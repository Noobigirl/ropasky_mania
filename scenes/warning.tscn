resource_name = "warning"
script/source = "extends Control

var sound_effects: Array[AudioStream] = [
	load(\"res://assets/music/vfx/c_a_move.wav\"),
	load(\"res://assets/music/vfx/tie.wav\"),
	load(\"res://assets/music/vfx/you_win.wav\"),
	load(\"res://assets/music/vfx/you_lose.wav\"),
]

var play_timer: Timer
var first_game = true

func _ready() -> void:
	play_timer = $Timer

	$AnimationPlayer.play(\"appear\") # playing animation and sound when starting
	play_timer.start(.9)
	await play_timer.timeout
	$AudioStreamPlayer.play()
	
func change_text_audio(text, audio) -> void:
	$RichTextLabel.text = text
	$AudioStreamPlayer.stream = sound_effects[audio]

func play_audio() -> void:
	$AudioStreamPlayer.play()

func _on_audio_stream_player_finished() -> void:
	if first_game:
		GameHandling.start_game.emit() # starting the game when the audio is over
		first_game = false 
	if not first_game:
		play_timer.start(.3)
		await play_timer.timeout # slight delay before emiting the remove signal
		MoveHandling.remove_text.emit()
"

